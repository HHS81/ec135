<layers>
<layer>
  <name>ati</name>
  <w>580</w> <!--253-->
  <h>600</h> <!--889-->

   <emissive>true</emissive>
   <texture>
    <path>Aircraft/ec145/Models/instruments/EUcopter-mfd/Textures/horizon.rgb</path>

    <x1>0.0</x1>
    <y1>0.01</y1>
    <x2>1.0</x2>
    <y2>0.990</y2>
    
    </texture>
   
