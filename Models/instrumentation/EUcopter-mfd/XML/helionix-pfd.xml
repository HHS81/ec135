<!--
================================
AP bugs on top of tapes
================================ -->

 <layer>
        <name>altimeter tape bug</name>
        <condition>
          <equals>
              <property>/autopilot/locks/altitude</property>
              <value>altitude-hold</value>
          </equals>
          <not><property>/instrumentation/efis/fnd/ap-target-blink</property></not>
        </condition> 
        <w>18</w>
        <h>15</h>
        <texture>
              <path>Aircraft/ec145/Models/instruments/EUcopter-mfd/Textures/helionix-rosemask.rgb</path>
              <x1>      0.95703100      </x1>
              <y1>      0.19726500      </y1>
              <x2>      0.99414000      </x2>
              <y2>      0.22851500      </y2>
        </texture>
        <transformations>
          <transformation> <type>x-shift</type> <offset>127</offset> </transformation> 
          <transformation> <type>y-shift</type> <offset>0</offset> </transformation> 
            <transformation>
                <type>y-shift</type>
                <property>/autopilot/settings/target-altitude-ft</property>
                <scale>0.35</scale>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <property>/instrumentation/altimeter/indicated-altitude-ft</property>
                <scale>-0.35</scale>
            </transformation>
          <transformation><type>rotation</type><offset>90</offset></transformation>
          </transformations>   
        <emissive>true</emissive>
    </layer>
    
    <layer>
        <name>AGL tape bug</name>
        <condition>
          <equals>
              <property>/autopilot/locks/altitude</property>
              <value>agl-hold</value>
          </equals>
          <not><property>/instrumentation/efis/fnd/ap-target-blink</property></not>
        </condition> 
        <w>18</w>
        <h>15</h>
        <texture>
              <path>Aircraft/ec145/Models/instruments/EUcopter-mfd/Textures/helionix-rosemask.rgb</path>
              <x1>      0.95703100      </x1>
              <y1>      0.19726500      </y1>
              <x2>      0.99414000      </x2>
              <y2>      0.22851500      </y2>
        </texture>
        <transformations>
          <transformation> <type>x-shift</type> <offset>200</offset> </transformation> 
          <transformation> <type>y-shift</type> <offset>-1</offset> </transformation> 
            <transformation>
                  <type>y-shift</type>
                  <property>/position/altitude-agl-ft</property>
                  <interpolation>             
                      <entry><ind>    0       </ind><dep>             0       </dep></entry>
                      <entry><ind>    100     </ind><dep>             -90     </dep></entry>
                      <entry><ind>    1000    </ind><dep>             -510    </dep></entry>
                      <entry><ind>    3000    </ind><dep>             -1138   </dep></entry>
                      <entry><ind>    999999  </ind><dep>             -1250   </dep></entry>
                  </interpolation>
            </transformation>
            <transformation>
                  <type>y-shift</type>
                  <property>/autopilot/settings/target-agl-ft</property>
                  <scale>-1</scale>
                  <interpolation>             
                      <entry><ind>    0       </ind><dep>             0       </dep></entry>
                      <entry><ind>    100     </ind><dep>             -90     </dep></entry>
                      <entry><ind>    1000    </ind><dep>             -510    </dep></entry>
                      <entry><ind>    3000    </ind><dep>             -1138   </dep></entry>
                      <entry><ind>    999999  </ind><dep>             -1250   </dep></entry>
                  </interpolation>
            </transformation>

          <transformation><type>rotation</type><offset>-90</offset></transformation>
        </transformations>   
        <emissive>true</emissive>
    </layer>

    <layer>
        <name>speed tape bug</name>
        <condition>
          <or>
            <equals>
                <property>/autopilot/locks/speed</property>
                <value>speed-with-pitch-trim</value>
            </equals>
            <equals>
                <property>/autopilot/locks/speed</property>
                <value>go-around</value>
            </equals>          
          </or>
        </condition> 
        
        <w>18</w>
        <h>15</h>
        <texture>
              <path>Aircraft/ec145/Models/instruments/EUcopter-mfd/Textures/helionix-rosemask.rgb</path>
              <x1>      0.95703100      </x1>
              <y1>      0.19726500      </y1>
              <x2>      0.99414000      </x2>
              <y2>      0.22851500      </y2>
        </texture>
        <transformations>
          <transformation> <type>x-shift</type> <offset>-100</offset> </transformation> 
          <transformation> <type>y-shift</type> <offset>-1</offset> </transformation> 
            <transformation>
                <type>y-shift</type>
                <property>/autopilot/settings/target-speed-kt</property>
                <scale>2.6</scale>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <property>/velocities/airspeed-kt</property>
                <scale>-2.6</scale>
            </transformation>
          <transformation><type>rotation</type><offset>-90</offset></transformation>
        </transformations>   
        <emissive>true</emissive>
    </layer>


