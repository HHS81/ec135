<?xml version="1.0"?>

<PropertyList>

  <name>Helionix PFD Mask 2</name>

  <w-base>580</w-base>
  <h-base>405</h-base>
  
  <layers>

  <layer>
        <name>total fuel indicator</name>
        <w>70</w>
        <h>100</h>
        <texture>
            <path>Aircraft/ec145/Models/instruments/EUcopter-mfd/Textures/helionix-bkgr.rgb</path>
	    <x1>0.9</x1>
            <y1>0.75</y1>
            <x2>1.0</x2>
            <y2>1.0</y2>
        </texture>
	<transformations>
	    <transformation> 
		<type>x-shift</type> 
		<offset>190</offset> 
	    </transformation> 
            <transformation>
               <type>y-shift</type>
               <offset>-177</offset>
            </transformation>
	    <transformation>
                <type>y-shift</type>
                <property>/consumables/fuel/total-fuel-norm</property>
                <scale>80</scale>
		<max>1</max>
		<min>0</min>
            </transformation>
        </transformations>
        <emissive>true</emissive>
    </layer>

    <layer>
    <name>mask</name>
    <emissive>true</emissive>
    <w>580</w>
    <h>410</h>
    <texture>   
      <path>Aircraft/ec145/Models/instruments/EUcopter-mfd/Textures/helionix-bkgr.rgb</path>
	  <x1>	0	</x1>
	  <y1>	0.100	</y1>
	  <x2>	0.625	</x2>
	  <y2>	1	</y2>
      </texture>
    </layer>

    <layer>
      <name>HPA</name>
      <type>text</type>
      <font>arial_black</font>
      <point-size>16</point-size>
      <color>
          <red>1</red>
          <green>1</green>
          <blue>1</blue>
      </color>
      <chunks>
         <chunk>
              <condition>
                <equals>
                  <property>/instrumentation/altimeter/setting-inhg</property>
                  <value>29.92</value>
                </equals>
              </condition>    
           
              <type>number-value</type>
              <property>/instrumentation/altimeter/setting-inhg</property>
              <format>STD</format>
         </chunk>
        
         <chunk>
              <condition>
                <not-equals>
                  <property>/instrumentation/altimeter/setting-inhg</property>
                  <value>29.92</value>
                </not-equals>
              </condition>    
           
              <type>number-value</type>
              <property>/instrumentation/altimeter/setting-inhg</property>
              <format>%04.0f</format>
              <scale>33.8639</scale>
           </chunk>
         </chunks>
      <transformations>
              <transformation> <type>x-shift</type> <offset>164</offset> </transformation> 
              <transformation> <type>y-shift</type> <offset>182</offset> </transformation> 
      </transformations>
  </layer>

   <layer>		
      <name>DTK</name>
      <type>text</type>
      <font>arial_black</font>
      <point-size>12</point-size>
      <color>
	  <red>1</red>
	  <green>1</green>
	  <blue>1</blue>
      </color>
      <chunks>
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>FMS</value>
              </equals>
            </condition>    
            <type>number-value</type>
            <format>DTK</format>
	  </chunk>
	  <chunk>
            <condition>
              <or>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value></value>
              </equals>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>NAV2</value>
              </equals>
              </or>
            </condition>    
            <type>number-value</type>
            <format>CRS</format>
	  </chunk>
      </chunks>
      <transformations>
	  <transformation> <type>x-shift</type> <offset>-250</offset> </transformation> 
	  <transformation> <type>y-shift</type> <offset>-60</offset> </transformation> 
      </transformations>
  </layer>
  
   <layer>		
      <name>CRS value</name>
      <type>text</type>
      <font>arial_black</font>
      <point-size>16</point-size>
      <color>
	  <red>1</red>
	  <green>1</green>
	  <blue>1</blue>
      </color>
      <chunks>
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>FMS</value>
              </equals>
              </condition>    
	      <type>number-value</type>
	      <property>/instrumentation/gps/wp/wp[1]/desired-course-deg</property>
	      <format>%3.0f</format>	      
	  </chunk>
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>NAV2</value>
              </equals>
            </condition>    
            <type>number-value</type>
            <property>/instrumentation/nav[1]/radials/selected-deg</property>
            <format>%3.0f</format>
	  </chunk>
          <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value></value>
              </equals>
            </condition>    
            <type>number-value</type>
            <property>/instrumentation/nav[0]/radials/selected-deg</property>
            <format>%3.0f</format>
          </chunk>
      </chunks>
      <transformations>
	  <transformation> <type>x-shift</type> <offset>-250</offset> </transformation> 
	  <transformation> <type>y-shift</type> <offset>-75</offset> </transformation> 
      </transformations>
  </layer>

   <layer>		
      <name>NAV type</name>
      <type>text</type>
      <font>arial_black</font>
      <point-size>18</point-size>
      <color>
	  <red>1</red>
	  <green>1</green>
	  <blue>1</blue>
      </color>
      <chunks>
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>FMS</value>
              </equals>
            </condition>    
            <type>number-value</type>
            <format>FMS</format>
	  </chunk>
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value></value>
              </equals>
	      <not><property>/instrumentation/nav[0]/has-gs</property></not>
	    </condition>
	    <type>literal</type>
	    <text>VOR1</text>
	  </chunk>
          <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>NAV2</value>
              </equals>
              <not><property>/instrumentation/nav[1]/has-gs</property></not>
            </condition>
            <type>literal</type>
            <text>VOR2</text>
          </chunk>          
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value></value>
              </equals>
              <property>/instrumentation/nav[0]/has-gs</property>
            </condition>
	    <type>literal</type>
	    <text>ILS1</text>
	  </chunk>
          <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>NAV2</value>
              </equals>
              <property>/instrumentation/nav[1]/has-gs</property>
            </condition>
            <type>literal</type>
            <text>ILS1</text>
          </chunk>
       </chunks>
      <transformations>
	  <transformation> <type>x-shift</type> <offset>-250</offset> </transformation> 
	  <transformation> <type>y-shift</type> <offset>-96</offset> </transformation> 
      </transformations>
  </layer>

   <layer>		
      <name>NAV source</name>
      <type>text</type>
      <font>arial_black</font>
      <point-size>14</point-size>
      <color>
	  <red>1</red>
	  <green>1</green>
	  <blue>1</blue>
      </color>
      <chunks>
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>FMS</value>
              </equals>
            </condition>    
            <type>number-value</type>
            <format>GPS</format>
	  </chunk>
	  <chunk>
	      <condition>
		<property>/instrumentation/nav[0]/in-range</property>
                <equals>
                  <property>/instrumentation/efis/fnd/navsource</property>
                  <value></value>
                </equals>
	      </condition>
	      <type>number-value</type>
	      <property>/instrumentation/nav[0]/frequencies/selected-mhz</property>
