	  <transformation> <type>x-shift</type> <offset>-255</offset> </transformation> 
	  <transformation> <type>y-shift</type> <offset>-135</offset> </transformation> 
      </transformations>
  </layer>  

   <layer>		
      <name>WPT distance</name>
      <condition>
          <equals>
            <property>/instrumentation/efis/fnd/navsource</property>
            <value>FMS</value>
          </equals>
          <property>/autopilot/route-manager/active</property>
      </condition>
      <type>text</type>
      <font>arial_black</font>
      <point-size>14</point-size>
      <color>
	  <red>1</red>
	  <green>1</green>
	  <blue>1</blue>
      </color>
      <chunks>
	  <chunk>
	      <condition>
		  <greater-than>
		    <property>/instrumentation/gps/wp/wp[1]/distance-nm</property>
		    <value>10</value>
		  </greater-than>		
	      </condition>
	      <type>number-value</type>
	      <property>/instrumentation/gps/wp/wp[1]/distance-nm</property>
	      <format>%3.0f NM</format>
	  </chunk>
	  
	  <chunk>
	      <condition>
		  <less-than>
		    <property>/instrumentation/gps/wp/wp[1]/distance-nm</property>
		    <value>10</value>
		  </less-than>		
	      </condition>
	      <type>number-value</type>
	      <property>/instrumentation/gps/wp/wp[1]/distance-nm</property>
	      <format>%03.1f NM</format>
	  </chunk>
	
      </chunks>
      <transformations>
	  <transformation> <type>x-shift</type> <offset>-255</offset> </transformation> 
	  <transformation> <type>y-shift</type> <offset>-150</offset> </transformation> 
      </transformations>
  </layer>  

