  </layer>

   <layer>		
      <name>WPT ID</name>
      <type>text</type>
      <font>arial_black</font>
      <point-size>18</point-size>
      <color>
	  <red>1</red>
	  <green>1</green>
	  <blue>1</blue>
      </color>
      <chunks>
	  <chunk>
            <condition>
              <equals>
                <property>/instrumentation/efis/fnd/navsource</property>
                <value>FMS</value>
              </equals>
            </condition>    
            <type>text-value</type>
	    <format>%1.6s</format>
	    <property>/instrumentation/gps/wp/wp[1]/ID</property>
	  </chunk>
	  <chunk>
              <condition>
                <equals>
                  <property>/instrumentation/efis/fnd/navsource</property>
                  <value></value>
                </equals>
