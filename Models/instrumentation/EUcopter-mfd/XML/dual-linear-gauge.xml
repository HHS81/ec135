	<x1>	0.9	</x1>
	<x2>	1	</x2>
	<y1>	0	</y1>
	<y2>	0.1	</y2>
    </texture>
   <w>60</w>
   <h>30</h>
   <transformations>
    <transformation><type>x-shift</type><offset>-30</offset></transformation> 
    <transformation><type>y-shift</type><offset>-72</offset></transformation>
   </transformations>
  </layer> 
  
