<?xml version="1.0"?>

<!-- A generic linear gauge with two values for a MFD

     The gauge has two linear indicators that display the 
     values as arrows (valLarr, valRarr) and limits (limHiL,limLoL, limHiR,limLoR).
     The values for the arrowa are also displayed as digital numbers below the gauge.
     The gauge can be customized to any range by setting parameters
     for the left and right scale.
     
     Parameters
     
     <valRarr> the property to display, must be a property tree path
     <valLarr> 
     <limLoL> 
     <limHiL>
     <name>  the name of the gauge displayed at the centre of the gauge, 
             must be  a literal string.
     <scaleL>,<scaleR>   to display arrows displacement, the 100% index is at 100 pixel
     
 -->

<PropertyList>
 <name>Generic quad linear gauge</name>
 <w-base>120</w-base>
 <h-base>170</h-base>
  
 <!--default parameters are for left and righ engines N1 and N2-->
 <params>
  <limLoL></limLoL>
  <limLoR></limLoR>
  <limHiL></limHiL>
  <limHiR></limHiR>
  <valRarr>engines/engine[1]/n2</valRarr>
  <valLarr>engines/engine/n2</valLarr>
  <name>    RPM</name>
  <scaleL>1.0</scaleL>  
  <scaleR>1.0</scaleR>
  <unitL1></unitL1>
  <unitL2></unitL2>
  <unitL3></unitL3>  
  <unitR1></unitR1>
  <unitR2></unitR2>
  <unitR3></unitR3>
 </params>
 
<layers>
  
  <!-- High-Low red critical indicator behind left numeral -->  
  <layer>
   <name>left numeral critical</name>
    <condition>
      <or>
      <greater-than>
	<property alias="../../../../../../params/valLarr"/>
	<property alias="../../../../../../params/limHiL"/>	
      </greater-than>
      <less-than>
	<property alias="../../../../../../params/valLarr"/>
	<property alias="../../../../../../params/limLoL"/>	
      </less-than>
     </or>
    </condition>
   <emissive>true</emissive>
