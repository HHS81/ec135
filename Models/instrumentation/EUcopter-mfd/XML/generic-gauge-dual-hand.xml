<?xml version="1.0"?>

<!-- A generic gauge with two hands for a MFD

     The gauge has two numbered hands which individually display the 
     value1 and value2.
     The values 1 and 2 are also displayed as digital numbers below the gauge.
     The gauge can be customized to any range by setting parameters
     for the minimum, critical (start of red zone) and maximum value.
     
     Parameters
     
     <value1> the property to display, must be a property tree path
     <value2> 
     <value3>
     <name>  the name of the gauge displayed at the centre of the gauge, 
             must be  a literal string.
     <fmt>   format for the numeric value display as a C format 
             string e.g. %5.0f (must be be 5 characters long to fit)      
     <min>   minimum value located on the lower index position
     <crit>  critical value before the red zone
     <critpos>  critical zone position in deg
     <max>   max value located on the top index position

     
 -->

<PropertyList>
 <name>Generic MFD dual-hand gauge</name>
 <w-base>200</w-base>
 <h-base>200</h-base>
  
 <!--default parameters-->
 <params>
  <value1>/surface-positions/flap-pos-norm</value1>
  <value2>/surface-positions/flap-pos-norm</value2>
  <value3></value3>
  <name>1-VAL-2</name>
  <fmt>%3.1f</fmt>
  <min>0</min>
  <crit>0.8</crit>  
  <critpos>200</critpos>  
  <max>1.0</max>
  <scale>1.0</scale>  
 </params>

<layers>

 <layer>
   <name>gauge face</name>
   <emissive>true</emissive>
   <texture>   
    <path>Aircraft/ec135/Models/instrumentation/EUcopter-mfd/Textures/dial-dual-hand.rgb</path>
      <x1>	0.00000000	</x1>
      <y1>	0.54687500	</y1>
      <x2>	0.45312500	</x2>
      <y2>	1.00000000	</y2>
  </texture>
   <w>202</w>
   <h>202</h>
  </layer>   

  <layer>
   <name>critical marker</name>
   <emissive>true</emissive>
   <texture>
    <path>Aircraft/ec135/Models/instrumentation/EUcopter-mfd/Textures/dial-dual-hand.rgb</path>
	<x1>	0.58593750	</x1>
	<y1>	0.77343750	</y1>
	<x2>	0.63476563	</x2>
	<y2>	0.97070313	</y2>
    </texture>
   <w>25</w>
   <h>101</h>
   <transformations>
    <transformation> <type>x-shift</type> <offset>0</offset> </transformation> 
    <transformation>
     <type>rotation</type><offset alias="../../../../../params/critpos"/>
    </transformation>
    <transformation>
     <type>rotation</type><offset>180</offset>
    </transformation>
    <transformation> <type>y-shift</type> <offset>45</offset> </transformation> 

   </transformations>
  </layer> 

  <layer>
   <name>val 3 bug</name>
   <condition>
       <property alias="../../../../params/value3"/>
   </condition>       
   <emissive>true</emissive>
   <texture>
    <path>Aircraft/ec135/Models/instrumentation/EUcopter-mfd/Textures/dial-dual-hand.rgb</path>
	<x1>	0.63476563	</x1>
	<y1>	0.77343750	</y1>
	<x2>	0.68359375	</x2>
	<y2>	0.97070313	</y2>
    </texture>
   <w>25</w>
   <h>101</h>
   <transformations>
    <transformation> <type>x-shift</type> <offset>0</offset> </transformation> 
	
    <transformation>
     <type>rotation</type>
     <property alias="../../../../../params/value3"/>
     <offset>180</offset>
      <interpolation>
	      <entry><ind alias="../../../../../../../params/min"/><dep>0</dep></entry>
	      <entry><ind alias="../../../../../../../params/crit"/><dep alias="../../../../../../../params/critpos"/></entry>
	      <entry><ind alias="../../../../../../../params/max"/><dep>288</dep></entry>
      </interpolation>
    </transformation>
    <transformation> <type>y-shift</type> <offset>45</offset> </transformation> 

   </transformations>
  </layer> 
  
  
  <layer>
   <name>needle marker 2</name>
   <emissive>true</emissive>
   <texture>
    <path>Aircraft/ec135/Models/instrumentation/EUcopter-mfd/Textures/dial-dual-hand.rgb</path>
	<x1>	0.53710938	</x1>
	<y1>	0.77343750	</y1>
	<x2>	0.58593750	</x2>
	<y2>	0.94921875	</y2>
    </texture>
   <w>25</w>
   <h>90</h>
   <transformations>
    <transformation> <type>x-shift</type> <offset>0</offset> </transformation> 
	
    <transformation>
     <type>rotation</type>
     <property alias="../../../../../params/value2"/>
     <offset>180</offset>
      <interpolation>
	      <entry><ind alias="../../../../../../../params/min"/><dep>0</dep></entry>
	      <entry><ind alias="../../../../../../../params/crit"/><dep alias="../../../../../../../params/critpos"/></entry>
	      <entry><ind alias="../../../../../../../params/max"/><dep>288</dep></entry>
      </interpolation>
    </transformation>
    <transformation> <type>y-shift</type> <offset>30</offset> </transformation> 

   </transformations>
  </layer> 

  <layer>
   <name>needle marker 1</name>
   <emissive>true</emissive>
   <texture>
    <path>Aircraft/ec135/Models/instrumentation/EUcopter-mfd/Textures/dial-dual-hand.rgb</path>
	<x1>	0.48828125	</x1>
	<y1>	0.77343750	</y1>
	<x2>	0.53710938	</x2>
	<y2>	0.94921875	</y2>
   </texture>
   <w>25</w>
   <h>90</h>
   <transformations>
    <transformation> <type>x-shift</type> <offset>0</offset> </transformation> 
    <transformation>
     <type>rotation</type>
     <property alias="../../../../../params/value1"/>
     <offset>180</offset>
      <interpolation>
	      <entry><ind alias="../../../../../../../params/min"/><dep>0</dep></entry>
	      <entry><ind alias="../../../../../../../params/crit"/><dep alias="../../../../../../../params/critpos"/></entry>
	      <entry><ind alias="../../../../../../../params/max"/><dep>288</dep></entry>
      </interpolation>	 
    </transformation>
    <transformation> <type>y-shift</type> <offset>30</offset> </transformation> 

   </transformations>
  </layer> 
   
  <layer>
	<name>gauge name</name>
	<emissive>true</emissive>
	<type>text</type>
	<font>arial_black</font>
	<point-size>18</point-size>
	<color>
		<red>0.7</red>
		<green>0.7</green>
		<blue>0.7</blue>
	</color>
	<chunks>
		<chunk>
			<type>literal</type>
			<text alias="../../../../../params/name"/>
		</chunk>
	   </chunks>
	<transformations>
	   <transformation> <type>x-shift</type> <offset>5</offset> </transformation> 
	   <transformation> <type>y-shift</type> <offset>-48</offset> </transformation> 
	</transformations>
 </layer>
 
  <layer>
	<name>numeric value 1</name>
    <emissive>true</emissive>
	<type>text</type>
	<font>arial_black</font>
	<point-size>18</point-size>
	<color>
		<red>0.2</red>
		<green>0.8</green>
		<blue>0.3</blue>
	</color>
	<chunks>
		<chunk>
			<type>number-value</type>
			<property alias="../../../../../params/value1"/>
			<format alias="../../../../../params/fmt"/>
			<scale alias="../../../../../params/scale"/>
		</chunk>
	   </chunks>
	<transformations>
	   <transformation> <type>x-shift</type> <offset>5</offset> </transformation> 
	   <transformation> <type>y-shift</type> <offset>-80</offset> </transformation> 
	</transformations>
   </layer>

  <layer>
	<name>numeric value 2</name>
    <emissive>true</emissive>
	<type>text</type>
	<font>arial_black</font>
	<point-size>18</point-size>
	<color>
		<red>0.2</red>
		<green>0.8</green>
		<blue>0.3</blue>
	</color>
	<chunks>
		<chunk>
			<type>number-value</type>
			<property alias="../../../../../params/value2"/>
			<format alias="../../../../../params/fmt"/>
			<scale alias="../../../../../params/scale"/>
		</chunk>
	   </chunks>
	<transformations>
	   <transformation> <type>x-shift</type> <offset>60</offset> </transformation> 
	   <transformation> <type>y-shift</type> <offset>-80</offset> </transformation> 
	</transformations>
   </layer>
</layers>
</PropertyList>