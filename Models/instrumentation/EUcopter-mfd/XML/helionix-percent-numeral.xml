   <layer>
        <name>percent sign</name>
        <emissive>true</emissive>
        <type>text</type>
        <font>arial_black</font>
        <point-size>22</point-size>
        <color>
                <red>1</red>
                <green>1</green>
                <blue>1</blue>
        </color>
        <chunks>
                <chunk>
                        <type>number-value</type>
                        <format alias="../../../../../params/unit"/>
                </chunk>
           </chunks>
        <transformations>
    <transformation> <type>x-shift</type> <offset>30</offset> </transformation> 
    <transformation> <type>y-shift</type> <offset>-10</offset> </transformation> 
        </transformations>
   </layer>
 

 
 
  </layers>
</PropertyList>

