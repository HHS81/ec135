<!-- Set Pixel colors for the terrain map

     this selects the color for each terrain map pixel
     from the row/col relative step property in -/+8 layers-->

<PropertyList>
    <params>
      <x>0</x>
      <y>0</y>
      <p>/instrumentation/terrain/row[0]/col[0]/step</p>
    </params>
