    <layer>
      <name>BOTTOM layer -8 color</name>
      <condition>
        <less-than>
          <property alias="../../../../params/p"/>
          <value>-7</value>
        </less-than>  
      </condition>
      <w>12</w><h>12</h>
      <texture>
          <path>Aircraft/ec145/Models/instruments/EUcopter-mfd/Textures/terrain-map.rgb</path>
          <x1>    0      </x1>
          <x2>    1      </x2>
          <y1>    0.01  </y1>
          <y2>    0.05   </y2>
      </texture>
      <emissive>true</emissive>
      <transformations>
          <transformation>
            <type>y-shift</type> <offset alias="../../../../params/y"/> 
