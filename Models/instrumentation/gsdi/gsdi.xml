<?xml version="1.0"?>

<PropertyList>
	<path>gsdi.ac</path>

	 <animation>
        <type>material</type>
		<object>face</object>
		<object>vneedle</object>
		<object>uneedle</object>
            <emission>
          <red>0.79</red>
            <green>0.39</green>
            <blue>0.198</blue>
            <factor-prop>systems/electrical/outputs/stdby-instrument-lights-norm</factor-prop>
        </emission>
    </animation>

	<animation>
		<type>select</type>
		<object>face</object>
		<object>vneedle</object>
		<object>uneedle</object>
		<condition>
			<not>
				<property>/sim/model/hide-gsdi</property>
			</not>
		</condition>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>uneedle</object-name>
		<property>instrumentation/gsdi/drift-u-kt</property>
		<factor>0.005</factor>
		<min-m>-0.03</min-m>
		<max-m>0.03</max-m>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

	<animation>
		<type>translate</type>
		<object-name>vneedle</object-name>
		<property>instrumentation/gsdi/drift-v-kt</property>
		<factor>0.005</factor>
		<min-m>-0.03</min-m>
		<max-m>0.03</max-m>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	
<animation>
  <type>noshadow</type>
		<object>face</object>
		<object>vneedle</object>
		<object>uneedle</object>
</animation>
</PropertyList>
