<?xml version="1.0" ?>
<!--
    Inspired from Torsten Dreyers ki266 (.../instruments_3d/ki266)
    Adapted for EC135P2 by FSig - many Thanks to him!
   ********************************************************************** 
   This is the ki266 3d instrument.
    Modeled after King KI266 DME Indicator

    This instrument needs the file
    Aircraft/Instruments-3d/ki266/ki266.nas
    to be included in your -set.xml nasal section
    like this:

    <nasal>
      <YourAircraft>
        <file>Aircraft/Instruments-3d/ki266/ki266.nas</file>
      </YourAircraft>
    </nasal>

    and at least one instance of the ki266 class to be created
    in your aircraft nasal code like this:
    ki266.new(0); # for your first dme at /instrumentation/dme[0]
    ki266.new(1); # if you have another at /instrumentation/dme[1]
    Maintainer: Torsten Dreyer 
   ********************************************************************** 
-->
<PropertyList>    

    <path>dme-1.ac</path>

 <animation>
  <type>material</type> 
  <object-name>SelectorKnob</object-name>
  <emission>
   <red>0.79</red>
   <green>0.39</green>
   <blue>0.198</blue>
   <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
  </emission>
 </animation>   

    <!-- the source switch -->
    <animation>
        <type>rotate</type>
        <object-name>SelectorKnob</object-name>
        <property>instrumentation/dme/switch-position</property>
        <factor>-30</factor>
        <min-deg>-60</min-deg>
        <max-deg>0</max-deg>
        <offset-deg>30</offset-deg>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>	  
	  <x-m>0.0012</x-m>
            <y-m>-0.0</y-m>
            <z-m>-0.0108</z-m>
        </center>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>selectorR</object-name>
        <visible>false</visible>
        <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
              <command>property-adjust</command>
              <property>instrumentation/dme/switch-position</property>
              <step>1</step>
              <min>1</min>
              <max>3</max>
              <wrap>0</wrap>
          </binding>
          <binding>
              <condition>
                  <equals>
                      <property>instrumentation/dme/switch-position</property>
                      <value type="int">1</value>
                  </equals>
              </condition>
              <command>property-assign</command>
              <property>instrumentation/dme/frequencies/source</property>
              <value>instrumentation/nav[0]/frequencies/selected-mhz</value>
          </binding>
          <binding>
              <condition>
                  <equals>
                      <property>instrumentation/dme/switch-position</property>
                      <value type="int">2</value>
                  </equals>
              </condition>
              <command>property-assign</command>
              <property>instrumentation/dme/frequencies/source</property>
              <value>instrumentation/dme/frequencies/selected-mhz</value>
          </binding>
          <binding>
              <condition>
                  <equals>
                      <property>instrumentation/dme/switch-position</property>
                      <value type="int">2</value>
                  </equals>
              </condition>
              <command>property-assign</command>
              <property>instrumentation/dme/frequencies/selected-mhz</property>
              <property>instrumentation/nav[0]/frequencies/selected-mhz</property>
          </binding>
          <binding>
              <condition>
                  <equals>
                      <property>instrumentation/dme/switch-position</property>
                      <value type="int">3</value>
                  </equals>
              </condition>
              <command>property-assign</command>
              <property>instrumentation/dme/frequencies/source</property>
              <value>instrumentation/nav[1]/frequencies/selected-mhz</value>
          </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>selectorL</object-name>
        <visible>false</visible>
        <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
              <command>property-adjust</command>
              <property>instrumentation/dme/switch-position</property>
              <step>-1</step>
              <min>1</min>
              <max>3</max>
              <wrap>0</wrap>
          </binding>
          <binding>
              <condition>
                  <equals>
                      <property>instrumentation/dme/switch-position</property>
                      <value type="int">1</value>
                  </equals>
              </condition>
              <command>property-assign</command>
              <property>instrumentation/dme/frequencies/source</property>
              <value>instrumentation/nav[0]/frequencies/selected-mhz</value>
          </binding>
          <binding>
              <condition>
                  <equals>
                      <property>instrumentation/dme/switch-position</property>
                      <value type="int">2</value>
                  </equals>
              </condition>
              <command>property-assign</command>
              <property>instrumentation/dme/frequencies/source</property>
              <value>instrumentation/dme/frequencies/selected-mhz</value>
          </binding>
          <binding>
              <condition>
                  <equals>
                      <property>instrumentation/dme/switch-position</property>
                      <value type="int">2</value>
                  </equals>
              </condition>
              <command>property-assign</command>
              <property>instrumentation/dme/frequencies/selected-mhz</property>
              <property>instrumentation/nav[1]/frequencies/selected-mhz</property>
          </binding>
        </action>
    </animation>
    
 <!-- turn it off, when u/s or switched off -->
  <animation>
    <type>select</type>
    <object-name>DME.nm1</object-name>
    <object-name>DME.nm2</object-name>
    <object-name>DME.nm3</object-name>
    <object-name>DME.nm</object-name>
    <object-name>DME.kt1</object-name>
    <object-name>DME.kt2</object-name>
    <object-name>DME.kt3</object-name>
    <object-name>DME.mn1</object-name>
    <object-name>DME.mn2</object-name>
    <condition>
      <and>
        <property>instrumentation/dme[0]/serviceable</property>
	<property>instrumentation/dme[0]/power-btn</property>
	<property>systems/electrical/outputs/dme</property>
      </and>
    </condition>
  </animation>

  <animation>
    <type>material</type>
    <object-name>DME.nm1</object-name>
    <object-name>DME.nm2</object-name>
    <object-name>DME.nm3</object-name>
    <object-name>DME.nm</object-name>
    <object-name>DME.kt1</object-name>
    <object-name>DME.kt2</object-name>
    <object-name>DME.kt3</object-name>
    <object-name>DME.mn1</object-name>
    <object-name>DME.mn2</object-name>
    <emission>
      <red>-1.0</red>
      <green>-1.0</green>
      <blue>-1.0</blue>
      <factor-prop>instrumentation/dme[0]/dimming-norm</factor-prop>
      <offset>1</offset>
    </emission>
  </animation>

  

  <!-- distance display, allways on. 
            Shows nn.n when distance is less than 100NM and
            shows nnn when distance is greater than or equal to 100NM
    -->
  <animation>
    <name>LeftDecimalDot</name>
    <type>select</type>
    <object-name>DME.nm</object-name>
    <condition>
      <property>instrumentation/dme[0]/left-dot</property>
    </condition>
  </animation>

  <!-- blank leading zeros -->
  <animation>
    <name>miles_100_blank</name>
    <type>select</type>
    <object-name>DME.nm1</object-name>
    <condition>
      <greater-than-equals>
	<property>instrumentation/dme[0]/miles-display</property>
        <value>100.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <animation>
    <name>miles_10_blank</name>
    <type>select</type>
    <object-name>DME.nm2</object-name>
    <condition>
      <or>
        <greater-than-equals>
          <property>instrumentation/dme[0]/miles-display</property>
          <value>10.0</value>
        </greater-than-equals>
        <and>
          <property>instrumentation/dme[0]/left-dot</property>
          <greater-than-equals>
            <property>instrumentation/dme[0]/miles-display</property>
            <value>1.0</value>
          </greater-than-equals>
        </and>
      </or>
    </condition>
  </animation>

  <animation>
    <name>miles_1_blank</name>
    <type>select</type>
    <object-name>DME.nm3</object-name>
    <condition>
      <greater-than-equals>
        <property>instrumentation/dme[0]/miles-display</property>
        <value>1.0</value>
      </greater-than-equals>
    </condition>
  </animation>

  <!-- left display, left digit -->
  <animation>
    <name>miles_100_lo</name>
    <type>textranslate</type>
    <object-name>DME.nm1</object-name>
    <property>instrumentation/dme[0]/miles-display</property>
    <step>100</step>
    <factor>0.001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- left display, center digit -->
  <animation>
    <name>miles_10_lo</name>
    <type>textranslate</type>
    <object-name>DME.nm2</object-name>
    <property>instrumentation/dme[0]/miles-display</property>
    <step>10</step>
    <factor>0.01</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!-- left display, right digit -->
  <animation>
    <name>miles_1_lo</name>
    <type>textranslate</type>
    <object-name>DME.nm3</object-name>
    <property>instrumentation/dme[0]/miles-display</property>
    <step>1</step>
    <factor>0.1</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--
        Center display, showing kts
    -->
  <animation>
    <condition>
      <greater-than-equals>
	<property>instrumentation/dme[0]/min-kts-display</property>
        <value>100</value>
      </greater-than-equals>
    </condition>
    <name>kts_100_select</name>
    <type>select</type>
    <object-name>DME.kt1</object-name>
  </animation>

  <animation>
    <condition>
      <greater-than-equals>
        <property>instrumentation/dme[0]/min-kts-display</property>
        <value>10</value>
      </greater-than-equals>
    </condition>
    <name>kts_10_select</name>
    <type>select</type>
    <object-name>DME.kt2</object-name>
  </animation>

  <animation>
    <condition>
      <property>instrumentation/dme[0]/in-range</property>
    </condition>
    <name>kts_1_select</name>
    <type>select</type>
    <object-name>DME.kt3</object-name>
  </animation>

  <animation>
    <name>kts_100</name>
    <type>textranslate</type>
    <object-name>DME.kt1</object-name>
    <property>instrumentation/dme[0]/min-kts-display</property>
    <step>100</step>
    <factor>0.001</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>kts_10</name>
    <type>textranslate</type>
    <object-name>DME.kt2</object-name>
    <property>instrumentation/dme[0]/min-kts-display</property>
    <step>10</step>
    <factor>0.01</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>kts_1</name>
    <type>textranslate</type>
    <object-name>DME.kt3</object-name>
    <property>instrumentation/dme[0]/min-kts-display</property>
    <step>1</step>
    <factor>0.1</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <!--Right display, showing minutes -->

 <animation>
    <condition>
      <property>instrumentation/dme[0]/in-range</property>
      
      <and>
        <property>instrumentation/dme[0]/in-range</property>
        <greater-than-equals>
        <property>instrumentation/dme[0]/indicated-ground-speed-kt</property>
	<value>5.0</value>
        </greater-than-equals>
      </and>     
    </condition>
    <name>min_1_select</name>
    <type>select</type>
    <object-name>DME.mn1</object-name>
    <object-name>DME.mn2</object-name>
  </animation> 

  <animation>
    <name>min_10</name>
    <type>textranslate</type>
    <object-name>DME.mn1</object-name>
    <property>instrumentation/dme[0]/indicated-time-min</property>
    <step>10</step>
    <factor>0.01</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <name>min_1</name>
    <type>textranslate</type>
    <object-name>DME.mn2</object-name>
    <property>instrumentation/dme[0]/indicated-time-min</property>
    <step>1</step>
    <factor>0.1</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList>
