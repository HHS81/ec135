  <panel>
    <name>panel-hotspots</name>
    <path alias="/params/hotspots"/>
    <top-left>
        <x-m>0.028</x-m>
        <y-m>-0.105</y-m>
        <z-m>0.132</z-m>
    </top-left>
    <bottom-left>
