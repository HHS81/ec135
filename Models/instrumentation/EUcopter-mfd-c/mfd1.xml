 <!-- the panel screen is included as canvas via Nasal -->

 <animation> 
    <type>material</type> 
    <object-name>helionix1</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>    
 </animation>

