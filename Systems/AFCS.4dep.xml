      <!-- proportional gain -->
      <Ti>10.0</Ti>
      <!-- integrator time -->
      <Td>0.0</Td>
      <!-- derivator time -->
      <u_min>-15.0</u_min>
      <!-- minimum output clamp -->
      <u_max>15.0</u_max>
      <!-- maximum output clamp -->
    </config>
  </pid-controller>
  
