  <!--Vertical Speed Hold-->
  <pid-controller>
    <name>Vertical Speed Hold Mode</name>
    <debug>false</debug>
    <enable>
      <condition>
        <not>
          <equals>
            <property>/autopilot/afcs/engaged</property>
            <value>false</value>
          </equals>
        </not>
        <equals>
          <property>/autopilot/afcs/locks/altitude</property>
          <value>vs-hold</value>
