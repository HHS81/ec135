<PropertyList>

    <name>aircraft-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>


    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Aircraft Options</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
	</button>
	</group>
	<hrule/>
    
	<group>
        <text>
            <label>AFCS Realism Settings</label>
        </text>
	<layout>vbox</layout>
	<padding>6</padding>
    
	<checkbox>
                <halign>left</halign>
                <label>Enable realistic FTR-button - by setting it, you need to keep the FTR-Button (f-key) pressed to set the cyclic forces to zero</label>
                <property>/sim/model/ec135/ftr-button-real</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command><!-- dialog-apply would apply values to all objects here - setlistener reacts on them in unfortunate way-->
                <property>/sim/model/ec135/ftr-button-real</property>
                </binding>
	<binding>
                    <command>dialog-update</command><!-- makes sure that command is still there when dialog is closed-->
                </binding>
	</checkbox>    
 	</group>
	<hrule/>

    
	<group>
	<layout>vbox</layout>
	<padding>6</padding>
	<checkbox>
                <halign>left</halign>
                <label>Enable procedural-lights</label>
                <property>/sim/model/ec135/procedural-lights</property>
                <live>true</live>
                <binding>
                    <command>property-toggle</command><!-- dialog-apply would apply values to all objects here - setlistener reacts on them in unfortunate way-->
                <property>/sim/model/ec135/procedural-lights</property>
                </binding>
	<binding>
                    <command>dialog-update</command><!-- makes sure that command is still there when dialog is closed-->
                </binding>
	</checkbox>
	</group>
	<hrule/>
 
    
 
    


</PropertyList>
